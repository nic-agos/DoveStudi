<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>


<BorderPane fx:id="main" xmlns="http://javafx.com/javafx/15.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="logic.view.MyReviewsGC">
   <center>
      <VBox alignment="TOP_CENTER" maxHeight="720.0" prefHeight="720.0" prefWidth="1100.0" spacing="50.0" BorderPane.alignment="CENTER">
         <children>
            <Label text="My Reviews">
               <font>
                  <Font name="Calisto MT" size="41.0" />
               </font>
            </Label>
            <HBox prefHeight="553.0" prefWidth="1100.0">
               <children>
                  <VBox alignment="TOP_CENTER" prefHeight="207.0" prefWidth="640.0">
                     <children>
                        <Label text="Done Reviews">
                           <font>
                              <Font name="Times New Roman" size="20.0" />
                           </font>
                        </Label>
                        <ListView fx:id="doneList" prefHeight="538.0" prefWidth="540.0" />
                     </children>
                  </VBox>
                  <VBox alignment="TOP_CENTER" prefHeight="200.0" prefWidth="640.0">
                     <children>
                        <Label text="Received Reviews">
                           <font>
                              <Font name="Times New Roman" size="20.0" />
                           </font>
                        </Label>
                        <ListView fx:id="receivedList" prefHeight="542.0" prefWidth="540.0" />
                     </children>
                  </VBox>
               </children>
               <VBox.margin>
                  <Insets left="10.0" right="10.0" />
               </VBox.margin>
            </HBox>
         </children>
      </VBox>
   </center>
</BorderPane>
