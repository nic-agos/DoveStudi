<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane fx:id="main" xmlns="http://javafx.com/javafx/15.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="logic.view.CreateGroupGC">
   <center>
      <VBox alignment="TOP_CENTER" prefHeight="720.0" prefWidth="600.0" spacing="50.0" BorderPane.alignment="CENTER">
         <children>
            <Label text="Create New Group">
               <font>
                  <Font name="Calisto MT" size="41.0" />
               </font>
               <VBox.margin>
                  <Insets top="15.0" />
               </VBox.margin>
            </Label>
            <TextField fx:id="nameField" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="30.0" prefWidth="500.0" promptText="Group Name...." />
            <Button fx:id="createBtn" mnemonicParsing="false" onMouseClicked="#createGroup" text="Create!" />
            <Button fx:id="backBtn" mnemonicParsing="false" onMouseClicked="#backAction" text="Back" />
         </children>
      </VBox>
   </center>
</BorderPane>
