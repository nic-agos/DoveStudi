<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>


<BorderPane fx:id="main" xmlns="http://javafx.com/javafx/15.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="logic.view.CreateGroupGC">
   <center>
      <VBox alignment="TOP_CENTER" prefHeight="720.0" prefWidth="1280.0" spacing="50.0" BorderPane.alignment="CENTER">
         <children>
            <Label text="Create New Group">
               <font>
                  <Font name="Calisto MT" size="41.0" />
               </font>
               <VBox.margin>
                  <Insets top="15.0" />
               </VBox.margin>
            </Label>
            <TextField fx:id="nameField" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="30.0" prefWidth="500.0" promptText="Group Name...." />
            <HBox fx:id="addBtn" alignment="CENTER" prefHeight="100.0" prefWidth="200.0" spacing="20.0">
               <children>
                  <TextField fx:id="usernameLbl" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefWidth="250.0" promptText="Username..." />
                  <Button mnemonicParsing="false" text="Add" />
               </children>
            </HBox>
            <Label fx:id="userAddedLbl" text="User Added!" textFill="#1dab00" underline="true" visible="false" />
            <Label fx:id="alreadyUserLbl" text="User Already Added" textFill="#eb9100" underline="true" visible="false" />
            <Label fx:id="notFoundLbl" text="User Not Found" textFill="#f20000" underline="true" visible="false" />
            <Button fx:id="createBtn" mnemonicParsing="false" text="Create!" />
            <Button fx:id="backBtn" mnemonicParsing="false" text="Back" />
         </children>
      </VBox>
   </center>
</BorderPane>
